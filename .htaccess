# Simple and clear .htaccess for hybrid setup
RewriteEngine On

# Force www redirect (GoDaddy handles HTTPS)
RewriteCond %{HTTP_HOST} ^dtsthiruvalla\.com$ [NC]
RewriteRule ^(.*)$ https://www.dtsthiruvalla.com/$1 [R=301,L]

# Ensure PHP files execute properly
<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
</FilesMatch>

# Set CORS headers for API directory
<LocationMatch "^/api/">
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
</LocationMatch>

# Handle OPTIONS requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Redirect ONLY the root request and non-existent files to Vercel
# Do NOT redirect anything in /api/ or any .php files
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^(.*)$ https://doulos-theological-seimnary.vercel.app/ [R=302,L]

# For 404s that are NOT API or PHP, redirect to Vercel
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/api/
RewriteCond %{REQUEST_URI} !\.php$
RewriteRule ^(.*)$ https://doulos-theological-seimnary.vercel.app/$1 [R=302,L]
